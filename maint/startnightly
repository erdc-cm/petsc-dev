#! /bin/csh

# usage startnightly test1 test2 ...


set dir=`dirname $0`

foreach CONF ($*)
  set SSH=ssh
  set SCP=scp
  set DASHN=-n
  source $dir/confignightly/${CONF}

  echo "start build at `date`:$SSH $USR@$MACH $DASHN $LOC/maint/buildtest $CONF" 
#  $SSH $USR@$MACH $DASHN "$LOC/maint/buildtest $CONF" &
# Needs bk pull for another day.
  $SSH $USR@$MACH $DASHN "cd $LOC; bk pull; $LOC/maint/buildtest $CONF" &
end
wait
