#! /bin/csh
#
# Example usage: killnightly solaris
#
#
set dir=`dirname $0`
set day=`date | cut -f1 -d" "`

foreach CONF ($*)
  set SSH=ssh
  set DASHN=-n
  source $dir/confignightly/${CONF}

  $SSH $USR@$MACH $DASHN "$LOC/maint/zapall" &
  sleep 300 # If 2 invocations on the same machine - they stomp in each other
end
wait

