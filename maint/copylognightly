#! /bin/csh
# 
# Copies log files from all nightly builds.
#

set dir=`dirname $0`
set day=`date | cut -f1 -d" "`

foreach CONF ($*)
  set SCP=scp
  source $dir/confignightly/${CONF}

  $SCP $USR@${MACH}:${LOC}/build.log /home/petsc/logs/nightly/build_${CONF}_${MACH}.log ;/bin/chmod a+r /home/petsc/logs/nightly/build_${CONF}_${MACH}.log &
  $SCP $USR@${MACH}:${LOC}/examples.log /home/petsc/logs/nightly/examples_${CONF}_${MACH}.log ;/bin/chmod a+r /home/petsc/logs/nightly/examples_${CONF}_${MACH}.log &
  $SCP $USR@${MACH}:${LOC}/configure.log /home/petsc/logs/nightly/configure_${CONF}_${MACH}.log ;/bin/chmod a+r /home/petsc/logs/nightly/configure_${CONF}_${MACH}.log &
  $SCP $USR@${MACH}:${LOC}/gcov.tar.gz /home/petsc/logs/nightly/gcov_${CONF}_${MACH}.tar.gz ;/bin/chmod a+r /home/petsc/logs/nightly/gcov_${CONF}_${MACH}.tar.gz &
end
sleep 300
/bin/chmod a+r /home/petsc/logs/nightly/*
wait
/bin/chmod a+r /home/petsc/logs/nightly/*
