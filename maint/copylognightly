#! /bin/csh
# $Id: copytestlog,v 1.4 2000/03/22 19:58:19 balay Exp $ 
# 
# Copies log files from failed builds.
#

set dir=`dirname $0`

foreach CONF ($*)
  set SCP=scp
  set CONF=$1
  source $dir/confignightly/$1

  $SCP $USR@${MACH}:$LOC/build.log /home/petsc/logs/nightly/build_$CONF.$MACH.log &
  $SCP $USR@${MACH}:$LOC/examples.log /home/petsc/logs/nightly/examples_$CONF.$MACH.log &
  $SCP $USR@${MACH}:$LOC/configure.log /home/petsc/logs/nightly/configure__$CONF.$MACH.log &
end
wait
chmod ugo+r /home/petsc/logs/nightly/*
