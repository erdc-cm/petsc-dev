#!/bin/sh
if [ $1 !=  "-np" -a $1 != "-n" ]; then
progname=$*
elif  [ $2 =  "1" ]; then
shift ; shift
progname=$*
else
echo "Uniprocessor version of MPI can only use one processor"
exit 1
fi

# If relative path is used prepend a ./
tail=`echo $progname | sed 's/\/.*//'` 
if  [ "$tail" != "" ]; then
  progname="./$progname"
fi

# Execute the program
$progname
exit 0

