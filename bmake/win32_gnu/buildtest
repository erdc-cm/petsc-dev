#! /bin/csh
# $Id: buildtest,v 1.4 2001/09/07 18:59:02 bsmith Exp $ 
#
# Defines the configuration for maint/buildtest, this is sourced by that script
#
set DATAFILESPATH=/home/balay/datafiles
set TMP=/home/balay/petsc-test
set MACH=balay@parth
set ARCH=win32_gnu
set TEST=testexamples_
set RSH=ssh
set APPEND='2>&1 >>'
#
set day=`date | cut -f1 -d" "`
if ($day == Sun) then
  set BOPT=g
  set JOBS=(1 2 3 6 8)
else if ($day == Mon) then
  set BOPT=O_c++
  set JOBS=(1 2 3 6 13 18)
else if ($day == Tue) then
  set ARCH=win32_borland
  set BOPT=g
  set JOBS=(4 9 13)
else if ($day == Wed) then
  set BOPT=O
  set JOBS=(1 2 3 6 8)
else if ($day == Thu) then
  set ARCH=win32_borland
  set BOPT=O_c++
  set JOBS=(4 9 13)
else if ($day == Fri) then
  set BOPT=O_complex
  set JOBS=(1 2 3 5 10 13)
else if ($day == Sat) then
  set BOPT=g
  set JOBS=(1 2 3 6 13)
endif






