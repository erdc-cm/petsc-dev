#! /bin/csh
# $Id: buildtest,v 1.4 2001/09/07 18:59:02 bsmith Exp $ 
#
# Defines the configuration for maint/buildtest, this is sourced by that script
#
set TMP=/Users/petsc/petsc-test
set MACH=playstation
set ARCH=macx
set TEST=testexamples_
set NICE=''
set RSH='ssh -x'
set RCP='scp -q -B'
set RSYNCSSH='-z -e ssh'
#
set day=`date | cut -f1 -d" "`
if ($day == Sun) then
  set BOPT=g
  set JOBS=(1 6 13)
else if ($day == Mon) then
  set BOPT=O_c++
  set JOBS=(1 6 13)
else if ($day == Tue) then
  set BOPT=g
  set JOBS=(1 6 13)
else if ($day == Wed) then
  set BOPT=O
  set JOBS=(1 6 13)
else if ($day == Thu) then
  set BOPT=g_c++
  set JOBS=(1 6 13)
else if ($day == Fri) then
  set BOPT=O_c++
  set JOBS=(1 6 13)
else if ($day == Sat) then
  set BOPT=O
  set JOBS=(1 6 13)
endif

